<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /blog
    RewriteRule ^(.+)/(css|img|js)/(.*)$ $2/$3 [L]
    RewriteCond %{REQUEST_URI} index(.+)
    RewriteRule ^(.+)$ index.php [L]
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
</IfModule>